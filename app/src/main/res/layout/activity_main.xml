<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F4F4F"
    tools:context="com.example.lyonschen.assignment2.MainActivity">


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_0" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_1" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_2" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton3"
        android:layout_toRightOf="@+id/imageButton3"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_3" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_4" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton5"
        android:layout_toRightOf="@+id/imageButton5"
        android:background="@null"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/calculator_5" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton4"
        android:layout_toEndOf="@+id/imageButton6"
        android:layout_toRightOf="@+id/imageButton6"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_6" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_7" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton6"
        android:layout_toEndOf="@+id/imageButton8"
        android:layout_toRightOf="@+id/imageButton8"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_8" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton7"
        android:layout_toEndOf="@+id/imageButton6"
        android:layout_toRightOf="@+id/imageButton6"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_9" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButton3"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_point" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageButton11"
        android:layout_toRightOf="@+id/imageButton11"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_equals" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/imageButton7"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_plus" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton13"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_minus" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageButton10"
        android:layout_toEndOf="@+id/imageButton10"
        android:layout_toRightOf="@+id/imageButton10"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_times" />

    <ImageButton
        android:id="@+id/imageButton16"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton10"
        android:layout_toEndOf="@+id/imageButton10"
        android:layout_toRightOf="@+id/imageButton10"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_divide" />

    <ImageButton
        android:id="@+id/imageButton17"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/imageButton16"
        android:layout_toEndOf="@+id/imageButton9"
        android:layout_toRightOf="@+id/imageButton9"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_percent" />

    <ImageButton
        android:id="@+id/imageButton18"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/imageButton8"
        android:layout_toEndOf="@+id/imageButton8"
        android:layout_toRightOf="@+id/imageButton8"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_changesign" />

    <ImageButton
        android:id="@+id/imageButton19"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageButton18"
        android:background="@null"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/calculator_reset" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_above="@+id/imageButton16"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="15dp"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        app:srcCompat="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="3.1415926"
        android:textColor="#FFFFF0"
        android:textSize="65sp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70sp"
        android:text="3+0.1415926"
        android:textSize="25sp" />


</RelativeLayout>
